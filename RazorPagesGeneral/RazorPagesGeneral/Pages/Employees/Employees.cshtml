@page
@model RazorPagesGeneral.Pages.Employees.EmpoyeesModel
@{
    ViewData["Title"] = "Employees";
    ViewData["ShowButtons"] = true;
    if (TempData["SM"] is not null)
    {
        <div class="alert alert-success text-center">
            @TempData["SM"]

        </div>
    }
}

<form method="get" class="mb-3" >
    <div class="input-group ">
        <input class="form-control" asp-for="SearchTerm" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
@*@await Component.InvokeAsync("HeadCount")*@
  <vc:head-count  department="@null"/>

<h1>Employees</h1>
<h3>@Model.Employees.Count()</h3>

<div class="row">
    @foreach (var item in Model.Employees)
    {
        <div class="col-12 col-sm-6 col-lg-4">
            <partial name="_DisplayEmployeePartial" model="item" view-data="ViewData"/>
        </div>
    }
</div>
